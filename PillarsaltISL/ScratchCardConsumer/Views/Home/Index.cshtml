@model string

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom-styles.css" />
</head>
<body>
    <div class="container">
        <h2>Generated Scratch Cards</h2>
        <div id="api-data"></div>
    </div>

    <script>
        if (@(string.IsNullOrEmpty(Model) ? "true" : "false") === "true") {
            document.getElementById('api-data').innerText = 'No data received from the API.';
        } else {
            let parsedData;
            try {
                parsedData = JSON.parse('@Html.Raw(Model)');
            } catch (error) {
                document.getElementById('api-data').innerText = 'Error parsing JSON data: ' + error.message;
                console.error('JSON Parsing Error:', error);
            }

            if (parsedData && parsedData.data && Array.isArray(parsedData.data)) {
                const apiDataContainer = document.getElementById('api-data');

                parsedData.data.forEach(card => {
                    const cardElement = document.createElement('div');
                    cardElement.className = 'card';

                    const cardTitle = document.createElement('div');
                    cardTitle.className = 'card-title';
                    cardTitle.textContent = `Serial Number: ${card.serialNumber}`;

                    const cardContent = document.createElement('div');
                    cardContent.className = 'card-content';
                    cardContent.innerHTML = `
                                <p><strong>PIN:</strong> ${card.pin}</p>
                                <p><strong>Used:</strong> ${card.isUsed}</p>
                                <p><strong>Purchased:</strong> ${card.isPurchased}</p>
                            `;

                    cardElement.appendChild(cardTitle);
                    cardElement.appendChild(cardContent);

                    apiDataContainer.appendChild(cardElement);
                });
            } else {
                document.getElementById('api-data').innerText = 'No valid data available.';
            }
        }
    </script>
</body>
</html>
